cat>figure_list<<EOF
vwf_a1a2.png
A1A2_starting_structure_trim.png
a1dna.png
fak_membrane.png
aqp0-dmpc.png
pfaqp.png
aqy1_bent.png
aqp_embedded_membrane.png
a1a2_blood_flow.png
CK_cover.gif
ck_dimerization.png
g1629e_thermo_cycle.png
g1629e_struct_changes.png
g1629e_fda.png
g1629e.png
lipid-stress.png
ig27.png
aqp0-dmpc-prot-posres.png
aqy1_RTxray.png
lipid-stress_fig1.png
ig27_fig1.png
ig27_fig4.png
lipid-stress2.png
aqy1_opening.png
aqp4.png
EOF


figures=($( cat figure_list ))
i=1
for figure in ${figures[*]}
do

    convert -resize x250  $figure pictures/$i.png
    if [ $figure = A1A2_starting_structure_trim.png ] ;     then
	convert -resize 450  $figure pictures/$i.png
    fi
	
    i=$[i+1]
done


# fig 16 (lipid stress) resize
convert -resize 500 pictures/16.png tmp.png
mv tmp.png pictures/16.png


# fig 24 (lipid stress) resize
convert -resize 500 pictures/24.png tmp.png
mv tmp.png pictures/24.png
